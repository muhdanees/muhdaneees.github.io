---
import {
  faTimes
} from "@fortawesome/free-solid-svg-icons";
import Icon from './Icon.astro';
const navigation = [
  {
    path: "/",
    name: "Home",
    // icon: faHome,
  },
  {
    path: "/about-us",
    name: "About Us",
    // icon: faUser,
  },
  {
    path: "/skills",
    name: "Skills",
    // icon: faCogs,
  },
  {
    path: "/experience",
    name: "Experience",
    // icon: faToolbox,
  },
  {
    path: "/portfolio",
    name: "Portfolio",
    // icon: faGlobe,
  },
  {
    path: "/contact-us",
    name: "Contact Us",
    // icon: faEnvelope,
  }
];

---

<div
  x-bind:class="!navOpen ? 'Nav' : 'Nav OpenNav'"
>
  <div x-bind:class="navOpen ? 'overlay' : ''"></div>
  <div  x-bind:class="!navOpen ? 'NavList' : 'NavList OpenNavList'">
    <button  x-on:click="navOpen = !navOpen" class="close-nav">
    <Icon {...faTimes} />
    </button>
    <ul>
      {navigation.map(({ path, name }) => (
        <li key={name}>
          <a href={path}>
            <span>{name}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
</div>

<style lang="scss">
$white: #ffffff;
$alto: #dad9d9;
$tundora: #4c4c4c;
$heavy_metal: #282922;
$black: #000000;
$orange_peel: #ff9800;
$mariner: #1f73bc;

.overlay {
  background: rgba($color: $black, $alpha: .5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 300ms;

  @media screen and (min-width: 767px) {
    display: none;
  }
}

.Nav { 
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  flex-basis: 50%;
  display: none;
  left: 0;

  @media only screen and (min-width: 768px) {
    background: transparent;
    right: 0;
  }

  @media screen and (min-width: 767px) { 
    position: relative;
    margin-right: 4px;
    display: block;
  }
}

.OpenNav {
  display: block;
}

.NavList {
  position: absolute;
  height: 100%;
  transition: right 300ms;
  right: -100%;
  max-width: 18rem;
  background-color: var(--white);
  width: 100%;

   @media screen and (min-width: 767px) { 
    position: relative;
    right: 0;
    max-width: 100%;
  }
}

.OpenNavList {
  transition: right 300ms;
  right: 0;
}

ul {
  list-style: none;
  height: 100%;
  padding-top: 3rem;
  position: relative;
  @media only screen and (min-width: 768px) {
    display: flex;
    margin-left: 0;
    background: transparent;
    margin: 0;
    padding: 0;
    max-width: 100%;
    justify-content: center;
  }
}

li { 
  text-align: right;
}

a {
  line-height: 2.5rem;
  display: flex;
  justify-content: flex-end;
  font-size: 1rem;
  text-decoration: none;
  width: 100%;
  padding-right: 1rem;
  span { 
    margin-left: 1rem;
    margin-right: 1rem;
    white-space: nowrap;
    @media screen and (min-width: 767px) {
      order: 2;
    }
  }
  svg { 
    min-width: 20px; 
    text-align: center;
    margin-top: .7rem;
    @media screen and (min-width: 767px) {
      display: none;
    }
  }
  @media screen and (min-width: 767px) {
    padding: 0;
  }
  &.NavActive,
  &:hover {
    position: relative;
    &::after {
      content: '';
      position: absolute;
      border: none;
      border-right: 0.2rem solid #FF9800;
      width: 100%;
      height: 50%;
      right: -.2rem;
      margin: auto;
      top: 0;
      bottom: 0;
      color: var(--orange_peel);
      @media screen and (min-width: 767px) {
        border: none;
        border-bottom: .2rem solid var(--orange_peel);
        width: 50%;
        bottom: 0-.5rem;
        margin: auto;
        left: 0;
        right: 0;
      } 
    }
  }
  @media screen and (min-width: 767px) {
    color: var(--heavy_metal);
  }
}

.close-nav {
  color: var(--mariner);
  position: absolute;
  top: 1rem;
  right: calc(18rem - 2.5rem);
  font-size: 2rem;
  display: inline-block;
  z-index: 1;

  @media only screen and (min-width: 768px) {
    display: none;
  }
}
</style>